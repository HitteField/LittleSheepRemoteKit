<Window x:Class="LittleSheep.XamlWindows.RecvLANConnectRequestMsgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LittleSheep.XamlWindows"
        mc:Ignorable="d"
        Title="收到了局域网连接请求" Height="180" Width="256">
    <Grid>
        <TextBlock Name="HintMsg" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="收到了来自{RemoteUser}的局域网连接控制请求，是否同意？" VerticalAlignment="Top" Height="83" Width="228"/>
        <Button Name="AgreeBtn" Content="同意" HorizontalAlignment="Left" Margin="29,112,0,0" VerticalAlignment="Top" Width="75" Click="AgreeBtn_Click"/>
        <Button Name="DeclineBtn" Content="拒绝" HorizontalAlignment="Left" Margin="146,112,0,0" VerticalAlignment="Top" Width="75" Click="DeclineBtn_Click"/>
    </Grid>
</Window>
