<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Closed="Window_Closed">
    <Grid>
        <TextBox Name="debugString" Text="" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="514" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
        <Button Name="initLanButton" Content="初始化LAN" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="555,25,0,0" Click="InitLan_Click"/>
        <Button Name="startRecvBoardcastButton" Content="开启接收广播" HorizontalAlignment="Left" Margin="555,58,0,0" VerticalAlignment="Top" Width="75" Click="StartRecvBoardcast_Click"/>
        <Button Name="sendBoardcastButton" Content="发送广播探查" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="555,93,0,0" Click="sendBoardcast_Click"/>
        <TextBox Name="userNameString" HorizontalAlignment="Left" Height="19" Margin="682,25,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="83" TextChanged="userNameString_TextChanged"/>
    </Grid>
</Window>
